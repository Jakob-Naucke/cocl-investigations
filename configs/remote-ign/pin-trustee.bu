variant: fcos
version: 1.6.0
storage:
  luks:
    - name: root
      label: luks-root
      device: /dev/disk/by-partlabel/root
      clevis:
        custom:
          needs_network: true
          pin: trustee
          config: '{"servers":[{"url":"http://192.168.50.1:8080","cert":""}],"path":"default/machine/root"}'
      wipe_volume: true
  filesystems:
    - device: /dev/mapper/root
      format: xfs
      wipe_filesystem: true
      label: root
